		//jquery for next button; the click function curly brackets call the div class "track"  //
		
		$('.next-track').click(function() { 
			alert("hi");
			$(".track").hide();
			$("#track-" + trackId).show().find(".sc-trackslist a").click();
		});

		//map tile layer and optional parameters


	</script>

