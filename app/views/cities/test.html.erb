		//     maxZoom: 18,
		//     minZoom: 1,
		//     maxBounds: [[-85, -180], [85, 180]]
		// }).addTo(map);





		//jquery for pulling random tracks
		$('.random').click(function() {
			location.reload();
		});

		function onMarkerClick(trackId) {
			$(".track").hide();
			$("#track-" + trackId).show().find(".sc-trackslist a").click();
